<!doctype html>
<html lang="de">
<head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width,initial-scale=1" />
 <title>Jam-Board</title>
 <link rel="stylesheet" href="/styles.css" />
</head>
<body>
 <header class="top">
 <div class="wrap">
   <div class="brand"><a href="/">Jam-Board</a></div>

   <!-- Burger Toggle (JS-frei) -->
   <input id="nav-toggle" class="nav-toggle" type="checkbox" aria-label="Menü öffnen/schließen" />
   <label for="nav-toggle" class="burger" aria-hidden="true"><span></span></label>

   <nav class="nav">
     <a href="/">Angebote</a>
     <a href="/admin/new" class="btn small">+ Neue Anzeige</a>
   </nav>
 </div>
</header>

 <main class="wrap">
   <h2>Neue Angebote</h2>

   <% if (ads && ads.length) { %>
     <div class="grid">
       <% ads.forEach(ad => { %>
         <article class="card">
           <h3><a href="/ad/<%= ad.id %>"><%= ad.title %></a></h3>
           <div class="meta">
             <%= ad.created_at %>
             <% if (ad.price != null) { %> · <strong><%= ad.price %> €</strong><% } %>
           </div>
           <a class="btn" href="/ad/<%= ad.id %>">Details ansehen</a>
         </article>
       <% }) %>
     </div>
   <% } else { %>
     <p>Noch keine Anzeigen.</p>
   <% } %>

   <footer class="footer">© <%= new Date().getFullYear() %> Blues Session Herten</footer>
 </main>
</body>
</html>
