<!doctype html>
<html lang="de">
<head>
 <meta charset="utf-8" />
 <title><%= ad.title %> – Jam-Board</title>
 <meta name="viewport" content="width=device-width, initial-scale=1" />
 <link rel="stylesheet" href="/styles.css" />
</head>
<body>
<header class="top">
 <div class="wrap">
   <div class="brand"><a href="/">Jam-Board</a></div>

   <!-- Burger Toggle (JS-frei) -->
   <input id="nav-toggle" class="nav-toggle" type="checkbox" aria-label="Menü öffnen/schließen" />
   <label for="nav-toggle" class="burger" aria-hidden="true"><span></span></label>

   <nav class="nav">
     <a href="/">Angebote</a>
     <a href="/admin/new" class="btn small">+ Neue Anzeige</a>
   </nav>
 </div>
</header>

 <main class="wrap">
  <a class="btn back" href="/">
 ← Zurück
</a>
   <article class="detail">
     <h1><%= ad.title %></h1>
     <p class="meta">
       <%= ad.created_at %>
       <% if (ad.price !== null && ad.price !== undefined) { %> · <%= ad.price %> € <% } %>
     </p>

     <% if (ad.image_url) { %>
       <img class="media" src="<%= ad.image_url %>" alt="<%= ad.title %>" />
     <% } %>

     <% if (ad.description) { %>
       <p><%= ad.description %></p>
     <% } %>
   </article>
 </main>

 <footer class="wrap footer">© 2025 Blues Session Herten</footer>
</body>
</html>
